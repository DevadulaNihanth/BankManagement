<script type="text/javascript">
    $(document).ready(function () {
        $("#customerDetails").prepend($("<thead></thead>").append($(this).find("tr:first"))).dataTable();

    });

</script>
<style>
    .tr, th {
        background-color: darkkhaki;
        text-align: center;
    }
</style>
<body style="background-image:url('http://www.psdgraphics.com/file/light-blue-abstract.jpg'); width:auto;height:786px;">
    <p style="margin-left:1100px"> <b>Logged in at @Session["SessionID"]</b></p>

    <hr />
    <h2 style="text-align:center;color:purple">Customer List</h2>
    <hr />

    <div style="margin-left:60px;margin-right:60px;margin-bottom:50px">
        <table class="table table-bordered" id="customerDetails" style="border:groove; border-color:#fbdb29">
            <tr bgcolor="#f1efef">
                <th width="50px" style="background-color:#f8d00e">
                    Serial
                </th>

                <th width="115px" style="background-color:#f8d00e">
                    @Html.DisplayName("Customer Id")
                </th>
                <th style="background-color:#f8d00e">
                    @Html.DisplayNameFor(model => model.SSNID)
                </th>
                <th width="140" style="background-color:#f8d00e">
                    @Html.DisplayName("Customer Name")
                </th>
                <th width="150px" style="background-color:#f8d00e">
                    @Html.DisplayName("Date Of Birth")
                </th>
                <th style="background-color:#f8d00e">
                    @Html.DisplayNameFor(model => model.Address1)
                </th>
                <th style="background-color:#f8d00e">
                    @Html.DisplayNameFor(model => model.Address2)
                </th>
                <th style="background-color:#f8d00e">
                    @Html.DisplayNameFor(model => model.City)
                </th>
                <th style="background-color:#f8d00e">
                    @Html.DisplayNameFor(model => model.State)
                </th>
                <th style="background-color:#f8d00e">
                    @Html.DisplayNameFor(model => model.Status)
                </th>
                <th style="background-color:#f8d00e" width="100px">
                    Operations
                </th>
                @*<th style="background-color:#f8d00e">
                        Delete
                    </th>*@
            </tr>

            @{int i = 1;}
            @foreach (var item in Model)
            {
                if (item.Status == "Active")
                {
                    <tr bgcolor="#f1efef">
                        <td style="text-align:center">
                            <span>@(i++)</span>

                        </td>


                        <td style="text-align:center">
                            @Html.DisplayFor(modelItem => item.CustomerId)
                        </td>
                        <td style="text-align:right">
                            @Html.DisplayFor(modelItem => item.SSNID)
                        </td>
                        <td style="text-align:left">
                            @Html.DisplayFor(modelItem => item.CustomerName)
                        </td>
                        <td style="text-align:center">
                            @Html.DisplayFor(modelItem => item.DOB)
                        </td>
                        <td style="text-align:left">
                            @Html.DisplayFor(modelItem => item.Address1)
                        </td>
                        <td style="text-align:left">
                            @Html.DisplayFor(modelItem => item.Address2)
                        </td>
                        <td style="text-align:left">
                            @Html.DisplayFor(modelItem => item.City)
                        </td>
                        <td style="text-align:left">
                            @Html.DisplayFor(modelItem => item.State)
                        </td>
                        <td style="text-align:center">
                            @Html.DisplayFor(modelItem => item.Status)
                        </td>
                        @*<td style="text-align:center">

                                @Html.ActionLink("Edit", "EditCustomer", new { id = item.CustomerId })

                            </td>*@
                        <td style="text-align:center">
                            @if (@item.Status == "Active")
                            {    <button type="button" onclick="location.href='@Url.Action("EditCustomer", "BankCustomer", new { id = item.CustomerId })'" class="btn btn-info btn-xs" style="height:25px;width:50px">  Edit<i class="glyphicon glyphicon-deposit"></i></button>

                                <button type="button" onclick="location.href='@Url.Action("DeleteCustomer", "BankCustomer", new { id=item.CustomerId})'" class="btn btn-danger btn-xs" style="height:25px">Delete<i class="glyphicon glyphicon-deposit"></i></button>

                                @*@Html.ActionLink("Delete", "DeleteCustomer", new { id = item.CustomerId })*@
                            }

                        </td>
                    </tr>
                }
                else
                {
                    <tr bgcolor="#f5cece">
                        <td style="text-align:center">
                            <span>@(i++)</span>

                        </td>


                        <td style="text-align:center">
                            @Html.DisplayFor(modelItem => item.CustomerId)
                        </td>
                        <td style="text-align:right">
                            @Html.DisplayFor(modelItem => item.SSNID)
                        </td>
                        <td style="text-align:left">
                            @Html.DisplayFor(modelItem => item.CustomerName)
                        </td>
                        <td style="text-align:center">
                            @Html.DisplayFor(modelItem => item.DOB)
                        </td>
                        <td style="text-align:left">
                            @Html.DisplayFor(modelItem => item.Address1)
                        </td>
                        <td style="text-align:left">
                            @Html.DisplayFor(modelItem => item.Address2)
                        </td>
                        <td style="text-align:left">
                            @Html.DisplayFor(modelItem => item.City)
                        </td>
                        <td style="text-align:left">
                            @Html.DisplayFor(modelItem => item.State)
                        </td>
                        <td style="text-align:center">
                            @Html.DisplayFor(modelItem => item.Status)
                        </td>
                        @*<td style="text-align:center">

                                @Html.ActionLink("Edit", "EditCustomer", new { id = item.CustomerId })

                            </td>*@
                        <td style="text-align:center">
                            @if (@item.Status == "Active")
                            {    <button type="button" onclick="location.href='@Url.Action("EditCustomer", "BankCustomer", new { id = item.CustomerId })'" class="btn btn-info btn-xs" style="height:25px">Edit<i class="glyphicon glyphicon-deposit"></i></button>

                                <button type="button" onclick="location.href='@Url.Action("DeleteCustomer", "BankCustomer", new { id=item.CustomerId})'" class="btn btn-danger btn-xs" style="height:25px">Delete<i class="glyphicon glyphicon-deposit"></i></button>

                                @*@Html.ActionLink("Delete", "DeleteCustomer", new { id = item.CustomerId })*@
                            }

                        </td>
                    </tr>
                }
            }

        </table>
    </div>
    </body>
